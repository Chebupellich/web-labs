{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@config/*": [
                "./config/*"
            ],
            "@models/*": [
                "./models/*"
            ],
            "@controllers/*": [
                "./controllers/*"
            ],
            "@services/*": [
                "./services/*"
            ],
            "@utils/*": [
                "./utils/*"
            ],
            "@errors/*": [
                "./errors/*"
            ],
            "@dtos/*": [
                "./dtos/*"
            ],
            "@routes/*": [
                "./routing/*"
            ],
            "@middleware/*": [
                "./middleware/*"
            ]
        },
        "outDir": "./dist",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
    }
}